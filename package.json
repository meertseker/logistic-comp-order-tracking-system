{
  "name": "seymen-transport",
  "version": "1.0.0",
  "description": "Offline Desktop Transportation Management System",
  "main": "dist-electron/main/index.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "node scripts/build-electron.js",
    "build:win": "npm run build && electron-builder --win --x64",
    "build:mac": "npm run build && electron-builder --mac",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && node scripts/watch-electron.js\"",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "migrate": "node scripts/migrate-database.js",
    "license:generate": "node scripts/generate-license.js",
    "license:advanced": "node scripts/generate-license-advanced.js"
  },
  "keywords": [
    "electron",
    "react",
    "vite",
    "sqlite",
    "transportation"
  ],
  "author": "Seymen Transport",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.0",
    "chart.js": "^4.4.0",
    "date-fns": "^3.0.0",
    "framer-motion": "^12.23.24",
    "jspdf": "^2.5.0",
    "jspdf-autotable": "^3.8.0",
    "lucide-react": "^0.548.0",
    "node-machine-id": "^1.1.12",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^3.3.0",
    "systeminformation": "^5.27.11",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.seymen.transport",
    "productName": "Seymen Transport",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "signingHashAlgorithms": []
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.business",
      "icon": "build/icon.icns"
    }
  }
}
